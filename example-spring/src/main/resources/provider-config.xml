<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" default-autowire="byName">

    <import resource="classpath:common-config.xml"/>

    <!-- EchoService -->
    <bean id="echoServiceImpl" class="net.demo.spring.provider.EchoServiceImpl"/>
    <bean id="echoService" class="net.hasor.rsf.spring.RsfProviderBean" init-method="init">
        <property name="bindType" value="net.demo.client.consumer.EchoService"/>
        <property name="target" ref="echoServiceImpl"/>
    </bean>

    <!-- MessageService -->
    <bean id="messageServiceImpl" class="net.demo.spring.provider.MessageServiceImpl"/>
    <bean id="messageService" class="net.hasor.rsf.spring.RsfProviderBean" init-method="init">
        <property name="bindType" value="net.demo.client.consumer.MessageService"/>
        <property name="target" ref="echoServiceImpl"/>
    </bean>

    <!-- UserService -->
    <bean id="userServiceImpl" class="net.demo.spring.provider.UserServiceImpl"/>
    <bean id="userService" class="net.hasor.rsf.spring.RsfProviderBean" init-method="init">
        <property name="bindType" value="net.demo.client.consumer.UserService"/>
        <property name="target" ref="echoServiceImpl"/>
    </bean>
</beans>