<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">

    <!-- 框架配置，包扫描范围 -->
    <hasor.environmentVar>
        <!-- 工作目录,用来保存地址本备份数据 -->
        <WORK_HOME>%USER.HOME%/hasor-work/rsf-center-alone</WORK_HOME>

        <!-- RSF对外提供服务的IP -->
        <RSF_SERVICE_IP>127.0.0.1</RSF_SERVICE_IP>
        <!-- RSF对外提供服务的服务端口 -->
        <RSF_SERVICE_PORT>2180</RSF_SERVICE_PORT>
        <!-- Telnet 控制台端口 -->
        <RSF_CONSOLE_PORT>2181</RSF_CONSOLE_PORT>

        <!-- 注册中心工作模式为：单机 -->
        <RSF_CENTER_WORK_MODE>alone</RSF_CENTER_WORK_MODE>
    </hasor.environmentVar>
</config>